@model Fornecedor.Application.ViewModels.EmpresaViewModel

@{
    ViewBag.Title = "Detalhes da Empresa";
}

<h2>@ViewBag.Title </h2>
<hr/>
<div class="container">
    <div class="row">
        <div class="">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4 class="panel-title">@Model.NomeFantasia</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class=" col-md-9 col-lg-12 ">
                            <table class="table table-user-information">
                                <tbody>
                                <tr>
                                    <td>CNPJ:</td>
                                    <td>@Model.CNPJ</td>
                                </tr>
                                <tr>
                                    <td>Uf:</td>
                                    <td>@Model.Uf</td>
                                </tr>

                                <tr>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="@Url.Action("editar", "Empresas", new {id = Model.EmpresaId})" data-modal="" class="btn btn-primary">
                        <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a href="@Url.Action("excluir", "Empresas", new {id = Model.EmpresaId})" data-modal="" class="btn btn-danger">
                        <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>